{
  "identifier": "main-permissions",
  "description": "主窗口的权限",
  "windows": ["main"],
  "webview": ["main"],
  "remote": {
    "urls": ["http://localhost:1500/"]
  },
  "local": true,
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "fs:allow-appconfig-read-recursive",
    "fs:allow-appconfig-write-recursive",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        { "path": "$APPDATA/*" },
        { "path": "$APPCONFIG/*" },
        { "path": "$CONFIG/*" },
        { "path": "$DATA/*" }
      ]
    },
    "notification:default",
    "sql:default",
    "store:default",
    "upload:default"
  ]
}
